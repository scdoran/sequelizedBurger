<h1>Make a Burger, Eat a Burger.</h1>
<hr>
<div id="wrapper">
	<div class="col">
		<h2>Burgers to Eat</h2>

		<ul>
			{{#each burger}}
				{{#unless this.devoured}}
				<li>
					<form action="/{{this.id}}?_method=PUT">
						<input type="hidden" name="devoured" value="true">
						<button type="submit">{{this.burger_name}}</button>
					</form>
				</li>
				{{/unless}}
			{{/each}}
		</ul>
	</div>

	<div class="col">
		<h2>RIP Burgers</h2>

		<ul>
			{{#each burger}}
				{{#if this.devoured}}
				<li>
					<form action="/{{this.id}}?_method=PUT">
						<input type="hidden" name="devoured" value="false">
						<button type="submit">{{this.burger_name}}</button>
					</form>
				</li>
				{{/if}}
			{{/each}}
		</ul>
	</div>
</div>

<div id="add">

	<h2>Add a Burger!</h2>

	<form class="create-update-form" action="/" method="POST">
		<div class="form-group">
			<label>Burger Name:</label>
			<input type="text" name="burger_name">

			<form action="/{{this.id}}?_method="POST">
				<input type="hidden" name="devoured" value="false">
				<button id="burger" type="submit">Add Burger</button>
			</form>
		</div>

		
	</form>
</div>